// Available variales inherints from: 
// https://github.com/vuejs/vuepress/blob/master/packages/%40vuepress/core/lib/client/style/config.styl

* {
  box-sizing: border-box;
}

.theme-default-content {
  margin: 0;
  min-width: 100%;
}

@media (min-width: $MQMobile) and (max-width: 1160px) {
  .theme-default-content, .page-edit {
    margin-left: 0 !important;
    margin-right: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    width: 80% !important;
    margin: auto !important;
    min-width: inherit;
  }
}

@media (min-width: 1161px) {
  .page-edit.page-edit {
    width: 100%;
    max-width: none;
    margin: 0;
  }
}

.links {
    display: flex;
    justify-content: flex-end !important;
}

.white--dark {
  color: #dcd6d6 !important;
}

.white {
  color: white !important;
}
.bg-green {
  background-color: #34ab6f;
}

.bg-dark {
  background: #282c34;
}

.Tag {
  background: rgba(0, 0, 0, 0.05);
  background-image: initial;
  background-position-x: initial;
  background-position-y: initial;
  background-size: initial;
  background-attachment: initial;
  background-origin: initial;
  background-clip: initial;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 8px;
  margin-right: 6px;
  cursor pointer;
}
.Tag:hover {
  background-color: #34ab6f;
  color: white;
  }

.activeTag {
  background-color: #34ab6f;
  color: white;}

h1{
  text-align: center;
}
.theme-default-content.custom img{
  padding:15px;
}